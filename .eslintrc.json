{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"next/core-web-vitals"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react/jsx-uses-react": "error",
		"react-hooks/rules-of-hooks": "error",
		"no-unused-vars": "off",
		"react-hooks/exhaustive-deps": "warn"
	},
	"plugins": ["react", "react-hooks"]
}
